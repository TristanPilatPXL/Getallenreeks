<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Hoog naar laag" Height="460" Width="720" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>

            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            
            <RowDefinition Height="100"/>
            
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Height="40" Margin="30,0,0,0" Content="Hoogste getal:" HorizontalAlignment="Center"/>
        <TextBox x:Name="getal" Grid.Column="0" Grid.Row="0" Text="" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="110" Margin="30,0,0,10" TextAlignment="Right"/>
        <Button Grid.Column="1" Grid.Row="0" Width="100" Height="Auto" Content="Toon lijst" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,10,10" FontWeight="Black" Click="toonLijst"/>
        <Button Grid.Column="2" Grid.Row="0" Width="100" Height="AUto" Content="Wissen" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,10,10" FontWeight="Black" Click="wissen"/>
        <Button Grid.Column="3" Grid.Row="0" Width="100" Height="AUto" Content="Afsluiten" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,10,10" FontWeight="Black" Click="aflsuiten"/>

        <Label Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right" Content="Powered by Tristan" FontSize="16" VerticalAlignment="Bottom" Margin="0,0,30,10"/>

        
        <TextBlock x:Name="resultaat" Grid.Column="0" Grid.Row="1"  Grid.ColumnSpan="4" Background="Gray" FontSize="16" Text="" Margin="30,10,30,50" FontFamily="Consolas"/>


    </Grid>
</Window>
